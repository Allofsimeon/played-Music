
<div class="container mt-4 mb-4">
  <div class="columns">
      <div class="column col-6 text-head">
          <h1 class="home-htext">Register <br> now!</h1>
      </div>
      <div class="column col-6 text-head" style="margin: auto;">
        <form action="/register" method="POST">

          <div class="form-group" id="user-group" >
            <label class="form-label" for="user">Username</label>
            <input type="text" class="form-input" name="user">
            <p class="form-input-hint" id="error"> </p>
          </div>

          <div class="form-group" id="pwd-group">
            <label class="form-label" for="pwd">Password</label>
            <input type="password" class="form-input" name="pwd">
            <p class="form-input-hint" id="Pwderror"> </p>
          </div>

          <button type="submit" class="btn btn-primary">Register</button> 

        </form>     
        <div class="divider mab-2" style="margin:2em 0"></div>   
        <p>
          Already have an account?
        </p>     
        <a class="creat-btn text-light" href="/login">Log in</a>

      </div>
  </div>
</div>

<script>
  const queryString = window.location.search;
  const urlParams = new URLSearchParams(queryString);
  const error = urlParams.get('error');
  if (error== "19"){
    let errorString="Username is already taken";
    document.getElementById("error").innerText=errorString;

    var element = document.getElementById("user-group");
    element.classList.add("has-error");

  }
</script>